<%= render 'users/form' %>
<script type="text/javascript">
  PagSeguroDirectPayment.setSessionId('<%= @pagseguro_session_id %>');
  var hash = PagSeguroDirectPayment.getSenderHash();
</script>
<button onclick="console.log(PagSeguroDirectPayment.getSenderHash());">TEST</button>
<div class="row">
  <div>
    <h2>Registrar</h2>
  </div>

  <%= form_for(@user) do |f| %>
    <div class="buttonHolder col-sm-1 col-sm-offset-2">
      <%= f.text_field :complete_name, :placeholder =>
          "Nome Completo" %>
      <%= f.text_field :email, :placeholder => "E-mail" %>
      <%= f.password_field :password, :placeholder => "Senha" %>
      <%= f.password_field :password_confirmation,
          :placeholder => "Confirmação de senha" %>
      <%= f.text_field :area_code, :placeholder => "DDD" %>
      <%= f.text_field :phone, :placeholder => "Telefone" %>
      <%= f.text_field :document, :placeholder => "CPF" %>
      <%= f.text_field :email, :placeholder => "E-mail do PagSeguro" %>
      <%= f.text_field :name, :placeholder => "Nome da conta PagSeguro" %>
      <%= f.text_field :hash_id, :placeholder =>"id" %>
      <%= f.text_field :postal_code, :placeholder => "CEP" %>
      <%= f.text_field :street, :placeholder => "rua" %>
      <%= f.text_field :number, :placeholder => "numero" %>
      <%= f.text_field :complement, :placeholder => "complemento" %>
      <%= f.text_field :district, :placeholder => "Bairro" %>
      <%= f.text_field :city, :placeholder => "Cidade" %>
      <%= f.text_field :state, :placeholder => "Sigla do Estado" %>
      <%= f.text_field :token, :placeholder => "codigo do cartao" %>
      <%= f.text_field :name_in_card, :placeholder => "nome do cartao" %>
      <%= f.date_field :birthdate, :placeholder => "ca" %>
      <%= f.text_field :document_card, :placeholder => "cpf do cartao" %>
      <%= f.submit "Entrar"%>
    </div>
  <% end %>
</div>
