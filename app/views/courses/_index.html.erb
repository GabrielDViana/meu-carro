<div class="course-nav-wrapper">
<div class="wrapper-inside clearfix">
  <ul class="course-nav-list"></ul>
  <% @courses.each do |course| %>
  <li class="<%= 'active' if params['course_id'].to_i== course.id %>">
    <%= link_to new_user_registration_path(course_id: course.id, user_token:@user.token), class: "ruby" do %>
    <div class="course-name">
      <%= course.name %>
    </div>
    <button class="btn" style="color: white;background: rgb(242, 118, 73);">
      Registrar <%= course.price %>
      <% if course.recurring %> <%= "Valido por " + course.cycles.to_s+ " meses" %> <% end %>
    </button>
    <div class="course-arrow"></div>
    <% end %>
  </li>
  <% end %>
</div>
</div>
